{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ES2022",
        "moduleResolution": "node",
        "lib": ["ES2022", "DOM"],
        "outDir": "dist",
        "strict": true,
        "skipLibCheck": true,
        "sourceMap": false,
        "inlineSourceMap": false,
        "incremental": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": "."
        // "typeRoots": ["./node_modules/@types", "./src/types"]
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"],
}